{
  "name": "sparklechase",
  "version": "1.0.0",
  "description": "SparkleChase - A crisp, streamer-friendly shiny hunting counter",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:old": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "electron-vite build",
    "build:old": "tsc && vite build",
    "build:electron": "electron-builder",
    "release": "electron-builder -mwl --publish always",
    "version:patch": "npm version patch -m \"chore: release v%s\"",
    "version:minor": "npm version minor -m \"chore: release v%s\"",
    "version:major": "npm version major -m \"chore: release v%s\"",
    "preview": "electron-vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["pokemon", "shiny", "counter", "electron", "gaming"],
  "author": "Shiny Counter Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/filip-porebski/sparkle_chase.git"
  },
  "homepage": "https://github.com/filip-porebski/sparkle_chase",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "electron-vite": "^1.0.29",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-updater": "^6.1.5"
  },
  "build": {
    "appId": "com.sparklechase.app",
    "productName": "SparkleChase",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github"
      }
    ],
    "mac": {
      "category": "public.app-category.games"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
